<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.eventhandling.ShapesController">
   <Label layoutX="10" layoutY="40" text="List of shapes" />
   <Button layoutX="10" layoutY="70" prefWidth="170" text="Text" onAction="#textButton"/>
   <Button layoutX="10" layoutY="100" prefWidth="170" text="Add Line" onAction="#addLine"/>
   <Button layoutX="10" layoutY="130" prefWidth="170" text="Add Rectangle" />
   <Button layoutX="10" layoutY="160" prefWidth="170" text="Add Circle and Ellips" />
   <Button layoutX="10" layoutY="190" prefWidth="170" text="Add Arc" />
   <Button layoutX="10" layoutY="220" prefWidth="170" text="Add Polygon and Polyline" />
   <Button layoutX="10" layoutY="250" prefWidth="170" text="Arc" />
   <Button layoutX="10" layoutY="280" prefWidth="170" text="Show Clock" onAction="#showClock" />
   <Pane fx:id="shapeviewPane" layoutX="200.0" layoutY="40.0" prefHeight="300.0" prefWidth="300.0" />
</AnchorPane>

